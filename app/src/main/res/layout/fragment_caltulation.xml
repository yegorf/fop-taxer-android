<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rates_container"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="30dp"
        android:background="@color/white"
        android:elevation="5dp">

        <ProgressBar
            android:id="@+id/rates_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true" />

        <TextView
            android:id="@+id/tv_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:text="$ 28.523" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/calculate_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rates_container"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tax_percent_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="center_vertical"
            app:errorIconDrawable="@null"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_tax_percent"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:hint="%" />

        </com.google.android.material.textfield.TextInputLayout>

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/income_total_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:layout_gravity="center_vertical"
            app:errorIconDrawable="@null"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_income_total"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:inputType="numberDecimal"
                android:hint="@string/calculation_income_total" />

        </com.google.android.material.textfield.TextInputLayout>

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btn_calculate"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:textSize="12sp"
            android:text="@string/calculation_calculate" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/results_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calculate_container"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:visibility="invisible"
        tools:visibility="visible">

        <com.yegorf.fop_taxer_android.view.ResultTextView
            android:id="@+id/tv_tax_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:descriptionText="@string/tax_sum" />

        <com.yegorf.fop_taxer_android.view.ResultTextView
            android:id="@+id/tv_pure_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:descriptionText="@string/pure_income" />

    </LinearLayout>

</RelativeLayout>