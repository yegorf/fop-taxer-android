<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_tv_income_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calculation_income_total" />

    <EditText
        android:id="@+id/et_income_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_tv_income_total"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btn_calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calculation_calculate"
        android:layout_below="@+id/et_income_total"/>

    <TextView
        android:id="@+id/tv_tax_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_calculate" />

</RelativeLayout>